{{>nav}}
<link rel="stylesheet" href="css/login.css">
<section>
    <div class="row_1">
        <h1>Welcome Again 👏🏻</h1>
        <span>Don't Have Account</span>
        <a href="/register">Register</a>
    </div>
    <div class="row_2">
        <form action="/login" method="post">
            <div class="mail_box">
                <label for="mail">Email</label> <br>
                <input type="email" name="email" placeholder="jhon@edward.com" autocomplete="email">
            </div>
            <div class="pass_box">
                <label for="password">Password</label> <br>
                <input type="password" name="password" placeholder="mypassword123" autocomplete="current-password">
            </div>
            <div class="submit_box">
                <button type="submit">Connect ↗</button>
            </div>
        </form>
    </div>
</section>
{{>footer}}